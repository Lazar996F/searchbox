<h1>Searchbox main screen</h1>

<%= form_with model: Term.new, url: term_index_path, method: :post do |form| %>
  <%= form.label :query %>
  <%= form.text_field :query %>
  <%= form.submit %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Query</th>
      <th>Created At</th>
    </tr>
  </thead>
  <tbody>
    <% @terms.each do |term| %>
      <tr>
        <td><%= term.query %></td>
        <td><%= term.ip_address %></td>
        <td><%= term.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
